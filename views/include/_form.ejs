<!--  form handling  -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-form">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Stan Lee">

        </div>
        <div class="form-group">
            <label for="email" class="text-form">Email</label>
            <input type="text" name="email" value="" placeholder="stanlee@google.com.br">
        </div>
        <div class="form-group">
            <label for="gender" class="text-form">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male">
                <label for="radio-2" class="radio-label">Male</label>
            </div>                                
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female">
                <label for="radio-3" class="radio-label">Famale</label>
            </div>                                
            <div class="radio inline">
                <input type="radio" id="radio-4" name="gender" value="Other">
                <label for="radio-4" class="radio-label">Other</label>
            </div>                                
            <div class="radio inline">
                <input type="radio" id="radio-5" name="gender" value="notsay">
                <label for="radio-5" class="radio-label">I prefer not to say</label>
            </div>                                
        </div>
        <div class="form-group">
            <label for="status" class="text-form">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="status" value="Active">
                <label for="radio-6" class="radio-label">Active</label>
            </div>                                
            <div class="radio inline">
                <input type="radio" id="radio-7" name="status" value="Inactive">
                <label for="radio-7" class="radio-label">Inactive</label>
            </div>                       
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-form update">Save</button>
        </div>

    </div>
</form>
<!--  form handling  -->